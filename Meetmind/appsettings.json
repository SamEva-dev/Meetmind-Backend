{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft.EntityFrameworkCore": "Debug",
                "RabbitMq": "Verbose",
                "RulesEngine": "Verbose"
            }
        },
        "Using": [ "Serilog.Sinks.File", "Serilog.Expressions" ],
        "WriteTo": [
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByExcluding",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "%MEETMIND_HOME%/log/MeetMind/MeetMindService_log.txt",
                                    "fileSizeLimitBytes": 104857600,
                                    "rollOnFileSizeLimit": true,
                                    "retainedFileCountLimit": 100,
                                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "%GALAXIS_HOME%/log/MeetMind/EntityFramework/EntityFramework_log.txt",
                                    "fileSizeLimitBytes": 104857600,
                                    "rollOnFileSizeLimit": true,
                                    "retainedFileCountLimit": 100,
                                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}",
                                    "restrictedToMinimumLevel": "Information"
                                }
                            }
                        ]
                    }
                }
            }
        ]
    },
    "Kestrel": {
        "EndPoints": {
            "Http": {
                "Url": "http://*:5000"
            },
            "Https": {
                "Url": "https://*:5001"
            }
        }
    },
    "Authentication": {
        "Schemes": {
            "Bearer": {
                "Authority": "http://localhost:8080/realms/meetmind",
                "Audience": "meetmind-api",
                "RequireHttpsMetadata": false
            }
        }
    },
    "ConnectionStrings": {
        "Sqlite": "Data/meetmind.db"
    }
}